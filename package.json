{
  "name": "xray-server",
  "version": "1.0.0",
  "description": "This package inspired by spatie/ray",
  "main": "index.js",
  "author": "Fahdi Labib",
  "license": "MIT",
  "build": {
    "appId": "id.my.fahdilabib.xray-server",
    "productName": "XRay Server",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "icon": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    }
  },
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --mac --windows --linux",
    "release": "electron-builder --mac --windows --linux --publish always"
  },
  "devDependencies": {
    "electron": "^20.0.2",
    "electron-builder": "^23.3.3"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "sequelize": "^6.21.3",
    "socket.io": "^4.5.1",
    "sqlite3": "^5.0.11"
  }
}
