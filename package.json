{
  "name": "xray-server",
  "version": "1.1.0",
  "description": "This package inspired by spatie/ray",
  "main": "index.js",
  "author": "Fahdi Labib",
  "license": "MIT",
  "build": {
    "appId": "id.my.fahdilabib.xray-server",
    "productName": "XRay Server",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "icon": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    }
  },
  "scripts": {
    "start": "run-s dev",
    "build": "run-s build:*",
    "build:css": "postcss server/resources/styles/style.css -o server/public/dist/style.css",
    "build:electron": "electron-builder --mac --windows --linux",
    "dev": "run-p dev:*",
    "dev:electron": "electron .",
    "dev:css": "postcss server/resources/styles/style.css -o server/public/dist/style.css --watch",
    "release": "electron-builder --mac --windows --linux --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.8",
    "electron": "^20.0.2",
    "electron-builder": "^23.3.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "tailwind-scrollbar": "^1.3.1",
    "tailwindcss": "^3.1.8"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "sequelize": "^6.21.3",
    "socket.io": "^4.5.1",
    "sqlite3": "^5.0.11"
  }
}
